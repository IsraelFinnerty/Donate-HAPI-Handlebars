<section class="ui raised segment">
    <div class="ui grid">
        <article class="eight wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Venue</th>
                    <th>Location</th>
                    <th>Category</th>
                    <th>Website</th>
                    <th>Geo-Location Lat/Long</th>
                </tr>
                </thead>
                <tbody>
    {{#each venue}}


                    <tr>
                        <td> {{pois.0.name}}</td>
                        <td> {{pois.0.location}} </td>
                        <td> {{pois.0.category}} </td>

                        <td> <a href="http://{{pois.0.website}}">{{pois.0.website}}</a> </td>
                        <td> {{pois.0.geo.lat}} , {{pois.0.geo.long}} </td>
                    </tr>


                </tbody>
            </table>

           <h4>Description</h4>

            <p>{{pois.0.description}}</p>
            <a href="/venue/update/{{pois.0._id}}">Edit Entry</a>
            <a href="/venue/delete/{{pois.0._id}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="ui trash icon"></i> Delete</a>

        </article>

        <aside class="eight wide column">
            <img src="{{pois.0.imageMain}}" class="ui medium image">
            <div class="ui small images">
                <img src="{{pois.0.image1}}">
                <img src="{{pois.0.image2}}">
                <img src="{{pois.0.image3}}">

            </div>
        </aside>
    {{/each}}
    </div>
    {{>error}}
</section>