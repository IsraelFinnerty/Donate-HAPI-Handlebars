<section class="ui raised segment">
    <div class="ui grid">
        <div class="ui ten wide column">
            <div class="ui stacked fluid form segment">
                {{> error}}
                <form action="/addvenue" method="POST">
                    <h3 class="ui header">Add Venue</h3>
                    <div class="two fields">
                        <div class="field">
                            <label>Name</label>
                            <input  type="text" name="name">
                        </div>
                        <div class="field">
                            <label>Location</label>
                            <input type="text" name="location">
                        </div>
                    </div>
                    <div class="field">
                    <label>Category</label>
                    <div class="ui selection dropdown">

                        <input type="hidden" name="category">
                        <i class="dropdown icon"></i>
                        <div class="default text">Choose a Category</div>
                        <div class="menu">
                            {{#each venues}}
                            <div class="item" data-value="{{category}}">{{category}}</div>
                            {{/each}}
                        </div>
                    </div>
                    </div>
                    <a href="/category"><div class="ui blue submit button">New Category</div></a>
                    <br><br>
                    <div class="field">
                        <label>Website</label>
                        <input type="text" name="website">
                    </div>
                    <div class="two fields">
                    <div class="field">
                        <label>Latitude</label>
                        <input type="number" name="lat">
                    </div>
                    <div class="field">
                        <label>Longitude</label>
                        <input type="number" name="long">
                    </div>
                </div>
                    <div class="field">
                        <label>Description</label>
                        <textarea name="description"></textarea>
                    </div>

                    <button id="upload_widget" class="cloudinary-button" onclick="return false">Upload files</button>

                    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

                    <script type="text/javascript">
                        var imageUrl;

                        var myWidget = cloudinary.createUploadWidget({
                                    cloudName: 'izzofinno',
                                    uploadPreset: 'venues'}, (error, result) => {
                                    imageUrl = result.info.secure_url;
                                    console.log(imageUrl);
                                    if (!error && result && result.event === "success") {
                                        console.log('Done! Here is the image info: ', result.info);

                                    }
                                }
                        )

                        document.getElementById("upload_widget").addEventListener("click", function(){
                            myWidget.open();

                        }, false);



                    </script>
                    <input id="image" type="hidden" value="" name="imageMain">
                    <script>
                        document.getElementById("image").value = imageUrl;
                    </script>


                    <button class="ui blue submit button">Add Venue</button>

                </form>



            </div>
        </div>
        <aside class="ui five wide column">
            <img src="images/poimagnify.jpg" class="ui medium image">
        </aside>
    </div>
</section>